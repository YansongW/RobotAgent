{
  "move_to_position": {
    "description": "移动机械臂到指定位置",
    "ros2_command": "ros2 action send_goal /rm_driver/move_to_pose rm_ros_interfaces/action/MoveTopose",
    "parameters_mapping": {
      "target_position.x": "pose.position.x",
      "target_position.y": "pose.position.y",
      "target_position.z": "pose.position.z",
      "target_orientation.x": "pose.orientation.x",
      "target_orientation.y": "pose.orientation.y",
      "target_orientation.z": "pose.orientation.z",
      "target_orientation.w": "pose.orientation.w"
    },
    "default_values": {
      "pose.orientation.x": 0.0,
      "pose.orientation.y": 0.0,
      "pose.orientation.z": 0.0,
      "pose.orientation.w": 1.0,
      "speed": 0.1
    }
  },
  
  "move_joints": {
    "description": "控制机械臂关节运动",
    "ros2_command": "ros2 action send_goal /rm_driver/move_joints rm_ros_interfaces/action/MoveJoints",
    "parameters_mapping": {
      "joint_positions": "joint_positions"
    },
    "joint_names": ["joint1", "joint2", "joint3", "joint4", "joint5", "joint6"]
  },
  
  "gripper_control": {
    "description": "控制机械臂夹爪",
    "ros2_command": "ros2 service call /rm_driver/set_gripper rm_ros_interfaces/srv/SetGripper",
    "parameters_mapping": {
      "gripper_state": "gripper_state",
      "force": "force"
    },
    "valid_states": ["open", "close"],
    "default_values": {
      "force": 50
    }
  },
  
  "get_current_pose": {
    "description": "获取机械臂当前位姿",
    "ros2_command": "ros2 service call /rm_driver/get_current_pose rm_ros_interfaces/srv/GetCurrentPose",
    "parameters_mapping": {},
    "response_fields": ["position", "orientation"]
  },
  
  "stop_motion": {
    "description": "停止机械臂运动",
    "ros2_command": "ros2 service call /rm_driver/stop_motion std_srvs/srv/Empty",
    "parameters_mapping": {},
    "priority": "high"
  },
  
  "home_position": {
    "description": "机械臂回到初始位置",
    "ros2_command": "ros2 action send_goal /rm_driver/move_to_pose rm_ros_interfaces/action/MoveTopose",
    "parameters_mapping": {},
    "default_values": {
      "pose.position.x": 0.0,
      "pose.position.y": 0.0,
      "pose.position.z": 0.5,
      "pose.orientation.x": 0.0,
      "pose.orientation.y": 0.0,
      "pose.orientation.z": 0.0,
      "pose.orientation.w": 1.0
    }
  },
  
  "pick_object": {
    "description": "抓取物体的复合动作",
    "sequence": [
      {
        "action": "move_to_position",
        "description": "移动到物体上方"
      },
      {
        "action": "gripper_control",
        "parameters": {"gripper_state": "open"},
        "description": "打开夹爪"
      },
      {
        "action": "move_to_position",
        "description": "下降到物体位置"
      },
      {
        "action": "gripper_control", 
        "parameters": {"gripper_state": "close"},
        "description": "夹取物体"
      },
      {
        "action": "move_to_position",
        "description": "提升物体"
      }
    ]
  },
  
  "place_object": {
    "description": "放置物体的复合动作",
    "sequence": [
      {
        "action": "move_to_position",
        "description": "移动到目标位置上方"
      },
      {
        "action": "move_to_position",
        "description": "下降到放置位置"
      },
      {
        "action": "gripper_control",
        "parameters": {"gripper_state": "open"},
        "description": "释放物体"
      },
      {
        "action": "move_to_position",
        "description": "提升夹爪"
      }
    ]
  }
}