# API配置文件模板
# 复制此文件为 api_config.yaml 并填入真实的API密钥

volcengine:
  # 火山方舟API配置
  api_key: "your-volcengine-api-key-here"
  base_url: "https://ark.cn-beijing.volces.com/api/v3"
  default_model: "doubao-seed-1-6-250615"
  
  # API调用参数
  temperature: 0.7
  max_tokens: 2000
  
  # 对话历史管理
  max_history_turns: 10  # 保持最近N轮对话

